<Window x:Class="MusicDatabase.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MusicDatabase"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Music Database" Margin="349,10,349,0" VerticalAlignment="Top"/>
        <ListView HorizontalAlignment="Left" Height="343" Margin="10,41,0,0" VerticalAlignment="Top" Width="772">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Band" Width="500" DisplayMemberBinding="{Binding Path=BandName}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button Name="btnExit" Content="Exit" HorizontalAlignment="Left" Margin="707,389,0,0" VerticalAlignment="Top" Width="75" Click="BtnExit_Click"/>
        <Button Name="btnChange" Content="Change" HorizontalAlignment="Left" Margin="627,389,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Name="btnNew" Content="New" HorizontalAlignment="Left" Margin="547,389,0,0" VerticalAlignment="Top" Width="75"/>
    </Grid>
</Window>
